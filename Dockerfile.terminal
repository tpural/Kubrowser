# Kubrowser Terminal Image
#
# A custom image for Kubrowser terminal sessions with:
# - Proper user handling (username passed via env var)
# - Bash shell with custom prompt
# - kubectl and common tools pre-installed

FROM alpine:3.19

# Install essential tools
RUN apk add --no-cache \
    bash \
    curl \
    git \
    jq \
    vim \
    openssh-client \
    ca-certificates \
    shadow \
    su-exec \
    && rm -rf /var/cache/apk/*

# Install kubectl (supports multi-arch)
ARG TARGETARCH
RUN KUBECTL_VERSION=$(curl -L -s https://dl.k8s.io/release/stable.txt) \
    && curl -LO "https://dl.k8s.io/release/${KUBECTL_VERSION}/bin/linux/${TARGETARCH}/kubectl" \
    && chmod +x kubectl \
    && mv kubectl /usr/local/bin/

# Copy entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Default environment
ENV KUBROWSER_USER=kubrowser
ENV SHELL=/bin/bash

ENTRYPOINT ["/entrypoint.sh"]
CMD ["sleep", "infinity"]
